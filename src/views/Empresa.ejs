<body>
  <header class="mt-5" style="height: 100px">
    
  </header>
  <div class="modal" id="reg-modal" name="reg-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="modal-content ">
        <div class="modal-header">
          <h5 class="modal-title">Customize seu envio!</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="container">
            <div class="row">
              <div class="col">
                <select class="form-control" name="selecione" id="selecionaropcao">
                  <option value="escolha">Escolha uma opção</option>
                  <option value="unicaPessoa">Enviar para um cliente especific</option>
                  <option value="variaPessoas">Enviar para varios clientes</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <input class="form-control" type="date">
              </div>
            </div>
            <div class="row">
              <div class="col">
                <input class="posicaotamplate" type="radio" id="tamplate1" name="tamplate" value="Tamplate 1">
                <label for="tamplate1">Template 1</label>
                <img class="tamplate1" src="/img/ATLASTEC (1).png">
              </div>
              <div class="col">
                <input class="posicaotamplate" type="radio" id="tamplate2" name="tamplate" value="tamplate 2">
                <label for="tamplate2">Template 2</label>
                <img class="tamplate2" src="/img/ATLASTEC (2).png">
              </div>
            </div>
            <div class="row">
              <div class="col">
                <label for="lastName" class="form-label">Use seu proprio template html!</label>
                <input type="file" name="file" id="file" class="form-control">
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

  <div class="p-5 m-5 bg-light border">
    <div class="container">
    <div class="row">
      <div class="col">
        <input class="form-control" id="txtbusca" type="text"  placeholder="Buscar..."/>
      </div>
      <div class="col">
        <a href="http://localhost:3000/cadastrarcliente" class="btn btn-primary" id="inscreva-se-btn">Cadastrar Cliente</a>
        <button type="button" class="btn btn-primary" id="config-btn" name="config-btn" data-bs-toggle="modal" data-bs-target="#reg-modal"> Configurar Email </button>
      </div>   
    </div>
    <div class="row mt-3">
      <div class="overflow-auto mh-50" style="height: 450px">
        <table class="table table-striped bg-light px-5" id="tabela" border="1">
          <thead class="table-dark">
            <tr>
              <th>Nome</th>
              <th>Email</th>
              <th>Telefone</th>
              <th>Comprado</th>
              <th>Nascimento</th>
              <th>Cidade</th>
              <th>Estado</th>
              <th>Selecionar</th>
              <th>Editar</th>
              <th>Excluir</th>
            </tr>
          </thead>
          <tbody>      
            <%for(usuario of Usuarios){%>
            <tr>
              <td><%=usuario.name%></td>
              <td><%=usuario.email%></td>
              <td><%=usuario.telefone%></td>
              <td><%=usuario.comprado%></td>
              <td><%=usuario.nasc%></td>
              <td><%=usuario.city%></td>
              <td><%=usuario.state%></td>
              <td><input id="cbIsSelected" class="cbIsSelected" type="checkbox" value="<%=usuario.email%>"></td>
              <td><a href="http://localhost:3000/editarusuario/<%=usuario._id%>">Editar</a></td>
              <td><a href="http://localhost:3000/deletevalue/<%=usuario._id%>">Excluir</a></td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button class="btn btn-success" id="sendEmail" name="sendEmail" style="width: 100px">Enviar</input>
      </div>     
    </div>       
  </div>
  </div>
  
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script>
    var input = document.getElementById('txtbusca')
    var sendEmail = document.getElementById('sendEmail')   

    sendEmail.addEventListener("click", (e) => {     
      var checkboxes = document.querySelectorAll('input[type="checkbox"]:checked')
      var checkList = []
      
      for (var checkbox of checkboxes) {      
        checkList.push(checkbox.value)                
      }
      location = "http://localhost:3000/enviaremail/"+JSON.stringify(checkList)
    })

    

    input.addEventListener("keypress", (e) => {
      if(e.key === "Enter")
      {
        event.preventDefault();
        location = "http://localhost:3000/empresa/<%=usuario.shop%>/"+input.value
      }
    })
  </script>
  </html>