  <body class="bg-light m">
    <div class="p-5 m-5 bg-light border">
      <form action="/cadcliente" enctype="multipart/form-data" method="post">
        <div class="container">   
          <div class="row">
            <div class="col py-2">
              <label for="selectEmpresa" class="form-label">Selecione a empresa</label>
              <select id="empresa" name="empresa" class="form-select">
                <%for(empresa of Empresas){%>
                <option value="<%=empresa._id%>"><%=empresa.name%></option>
                <%}%>
              </select>
            </div>
          </div>
          <div class="row">
            <div class="col-2 py-2">
              <label for="firstName" class="form-label">Nome do Cliente</label>
              <input type="text" class="form-control" id="name" name="name">
            </div>
            <div class="col-3 py-2">
              <label for="cpf" class="form-label">CPF</label>
              <input type="cnpj" class="form-control" id="cpf" name="cpf">
            </div>
            <div class="col py-2">
              <label for="emailInfo" class="form-label">E-mail</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
          </div>
          <div class="row">
            <div class="col-3 py-2">
              <label for="phoneNumber" class="form-label">Telefone</label>
              <input type="text" class="form-control" id="telefone" name="telefone" placeholder="(88) 9999-9999">
            </div>
            <div class="col-3 py-2">
              <label for="phoneNumber" class="form-label">O que foi comprado</label>
              <input type="text" class="form-control" id="comp" name="comp">
            </div>
            <div class="col py-2">
              <label for="phoneNumber" class="form-label">Data de Nascimento</label>
              <input type="date" class="form-control" id="data" name="data">
            </div>
          </div>
          <div class="row">
            <div class="col-3 py-2">
              <label for="lastName" class="form-label">Cidade</label>
              <input type="cnpj" class="form-control" id="cidade" name="cidade">
            </div>
            <div class="col-3 py-2">
              <label for="lastName" class="form-label">Estado</label>
              <input type="cnpj" class="form-control" id="estado" name="estado">
            </div>
          </div>
          <div class="row">
            <div class="col-5 py-2">
              <label for="lastName" class="form-label">Ou faça upload de uma tabela no formato csv!</label>
              <input type="file" name="file" id="file" class="form-control" id="cnpj">
            </div>
          </div>          
            <div class="col-md-12 py-2">
              <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
      </form>
    </div>
    
